@model IEnumerable<WorkshopASPMVC.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => seller.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => seller.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => seller.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(model => seller.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@seller.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

